@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Tecrubeler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Tecrube Guncelleme Yeri</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListId" />
                            <label>Gorulecek ish</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Tarix</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />
                            <button class="btn btn-warning">Ishi guncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>