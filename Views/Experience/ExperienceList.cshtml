@model List<Experience>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Tecrubeler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tecrube Listi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Tecrubelerle bagli ishleri burada ede bilersiniz:
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ish yeri</th>
                                        <th scope="col">Vezife</th>
                                        <th scope="col">Tarix</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Guncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ExperienceId</td>
                                            <td>@item.Head</td>
                                            <td>@item.Title</td>
                                            <td>@item.Date</td>
                                            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Guncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni tecrube elave et</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

